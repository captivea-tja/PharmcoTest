<odoo>
    <record id="cap_mrp_workorder_view_form_tablet_inherited" model="ir.ui.view">
        <field name="name">cap.mrp.workorder.view.form.tablet.inherited</field>
        <field name="model">mrp.workorder</field>
        <field name="inherit_id" ref="mrp_workorder.mrp_workorder_view_form_tablet"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('o_workorder_form')]" position="after">
                <div id="component_2" class="o_workorder_bar_content o_workorder_form" attrs="{'invisible': ['|', '|', ('component_id_2', '=', False), ('test_type', 'not in', ('register_byproducts', 'register_consumed_materials')), ('is_last_step', '=', True)]}">
                    <div class="o_workorder_field">
                        <div attrs="{'invisible': [('test_type', '=', 'register_byproducts')]}" class="o_form_label">Component</div>
                        <div attrs="{'invisible': [('test_type', '=', 'register_consumed_materials')]}" class="o_form_label">By-product</div>
                        <field name="component_id_2" options="{'no_open': True}" readonly="1"/>
                    </div>
                    <div class="o_workorder_field">
                        <div class="o_workorder_lot">
                            <div class="o_form_label" attrs="{'invisible': [('component_tracking', '!=', 'serial')]}">Serial Number</div>
                            <div class="o_form_label" attrs="{'invisible': [('component_tracking', '!=', 'lot')]}">Lot Number</div>
                            <field name="lot_id_2" class="text-center o_lot_number" context="{'default_product_id': component_id_2, 'default_company_id': company_id, 'active_mo_id': test_type == 'register_consumed_materials' and production_id or False}" attrs="{'invisible': [('component_tracking', '=', 'none')]}" domain="[('product_id', '=', component_id_2), '|', ('company_id', '=', False), ('company_id', '=', company_id)]"/>
                        </div>
                    </div>
                    <div class="o_workorder_field text-right">
                        <label for="qty_done_2" string="Quantity"/>
                        <div>
                            <field name="qty_done_2" attrs="{'readonly': [('component_tracking', '=', 'serial')]}" string="Quantity" class="oe_inline"/> /
                            <field name="component_remaining_qty" readonly="1" class="oe_inline"/>
                            <label for="qty_done_2" string=" "/>
                            <field name="component_uom_id" readonly="1" class="oe_inline"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>