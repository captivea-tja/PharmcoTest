<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="cap_view_mrp_production_form_view_inherited" model="ir.ui.view">
        <field name="name">cap.view.mrp.production.form.view.inherited</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='finished_move_line_ids']" position="before">
                <group>
                    <group>
                        <field name="supplier_lot" attrs="{'required': [('has_tracking', '!=', 'none')], 'readonly': [('state', 'in', ['to_close', 'done', 'cancel'])], 'invisible': [('has_tracking', '=', 'none')]}"/>
                        <field name="manufacturer_lot" attrs="{'required': [('has_tracking', '!=', 'none')], 'readonly': [('state', 'in', ['to_close', 'done', 'cancel'])], 'invisible': [('has_tracking', '=', 'none')]}"/>
                        <field name="manufacture_date" attrs="{'required': [('has_tracking', '!=', 'none')], 'readonly': [('state', 'in', ['to_close', 'done', 'cancel'])], 'invisible': [('has_tracking', '=', 'none')]}"/>
                        <field name="container_type" attrs="{'required': [('has_tracking', '!=', 'none')], 'readonly': [('state', 'in', ['to_close', 'done', 'cancel'])], 'invisible': [('has_tracking', '=', 'none')]}"/>
                    </group>
                    <group>
                        <field name="supplier_id" attrs="{'required': [('has_tracking', '!=', 'none')], 'readonly': [('state', 'in', ['to_close', 'done', 'cancel'])], 'invisible': [('has_tracking', '=', 'none')]}" readonly="1"/>
                        <field name="tare_weight" attrs="{'required': [('has_tracking', '!=', 'none')], 'readonly': [('state', 'in', ['to_close', 'done', 'cancel'])], 'invisible': [('has_tracking', '=', 'none')]}"/>
                        <field name="component_weight" attrs="{'invisible': [('has_tracking', '=', 'none')]}"/>
                        <field name="gross_weight" attrs="{'invisible': [('has_tracking', '=', 'none')]}"/>
                    </group>
                </group>
            </xpath>
            <xpath expr="//field[@name='move_raw_ids']" position="inside">
                <tree delete="0" default_order="is_done,sequence" decoration-muted="is_done" decoration-warning="quantity_done - product_uom_qty &gt; 0.0001" decoration-success="not is_done and quantity_done - product_uom_qty &lt; 0.0001" decoration-danger="not is_done and reserved_availability &lt; product_uom_qty and product_uom_qty - reserved_availability &gt; 0.0001" editable="bottom">
                    <field name="product_id" required="1"/>
                    <field name="lot_id" attrs="{'required': [('has_tracking', '=', 'lot')], 'readonly': [('has_tracking', '!=', 'lot')]}" domain="[('product_id', '=', product_id), ('product_qty', '>=', product_uom_qty)]" context="{'product_uom_qty': product_uom_qty, 'filter_lot_details': True}"/>  
                    <field name="company_id" invisible="1"/>
                    <field name="product_uom_category_id" invisible="1"/>
                    <field name="name" invisible="1"/>
                    <field name="unit_factor" invisible="1"/>
                    <field name="product_uom" groups="uom.group_uom"/>
                    <field name="date" invisible="1"/>
                    <field name="date_expected" invisible="1"/>
                    <field name="picking_type_id" invisible="1"/>
                    <field name="has_tracking" invisible="1"/>
                    <field name="operation_id" invisible="1"/>
                    <field name="needs_lots" readonly="1" groups="stock.group_production_lot"/>
                    <field name="is_done" invisible="1"/>
                    <field name="bom_line_id" invisible="1"/>
                    <field name="sequence" invisible="1"/>
                    <field name="location_id" invisible="1"/>
                    <field name="warehouse_id" invisible="1"/>
                    <field name="location_dest_id" domain="[('id', 'child_of', parent.location_dest_id)]" invisible="1"/>
                    <field name="state" invisible="1" force_save="1"/>
                    <field name="product_uom_qty" string="To Consume"/>
                    <field name="reserved_availability" attrs="{'invisible': [('is_done', '=', True)], 'column_invisible': [('parent.state', 'in', ('draft', 'done'))]}" string="Reserved"/>
                    <field name="quantity_done" string="Consumed" attrs="{'column_invisible': [('parent.state', '=', 'draft')]}" readonly="1"/>
                </tree>
            </xpath>
        </field>
    </record>
    <record id="cap_view_stock_move_raw_tree_inherited" model="ir.ui.view">
        <field name="name">cap.view.stock.move.raw.tree.inherited</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="mrp.view_stock_move_raw_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name='lot_id'/>
            </xpath>
        </field>
    </record>
    <record id="cap_lot_view_mrp_production_form_view_inherited_inherited" model="ir.ui.view">
        <field name="name">cap.view_mrp.production.form.view.inherited.inherited</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="cap_mo_assign_lot_serial.cap_lot_view_mrp_production_form_view_inherited"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='open_produce_product']" position="attributes">
                <attribute name="attrs">{'invisible': ['|', '|', ('state', 'in', ['draft', 'to_close', 'done', 'cancel']), ('move_line_component_ids', '!=', []), ('routing_id', '!=', False)]}</attribute>
            </xpath>
            <xpath expr="//label[@for='next_serial']" position="attributes">
                <attribute name="attrs">{'invisible': ['|', '|', '|', ('display_assign_serial', '=', False), ('has_tracking', 'in', ['none', 'lot']), ('routing_id', '!=', False), ('product_id', '=', False)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='next_serial_qty']" position="attributes">
                <attribute name="attrs">{'invisible': ['|', '|', ('display_assign_serial', '=', False), ('has_tracking', 'in', ['serial', 'none', 'lot']), ('routing_id', '!=', False)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='next_serial_count']" position="attributes">
                <attribute name="attrs">{'invisible': ['|', '|', ('display_assign_serial', '=', False), ('has_tracking', 'in', ['none', 'lot']), ('routing_id', '!=', False)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='next_serial']" position="attributes">
                <attribute name="attrs">{'invisible': ['|', '|', ('has_tracking', 'in', ['none', 'lot']), ('routing_id', '!=', False), ('product_id', '=', False)]}</attribute>
            </xpath>
            <xpath expr="//button[@name='generate_sequence_number']" position="attributes">
                <attribute name="attrs">{'invisible': ['|', '|', ('has_tracking', 'in', ['none', 'lot']), ('routing_id', '!=', False), ('product_id', '=', False)]}</attribute>
            </xpath>
            <xpath expr="//label[@for='next_serial_count']" position="attributes">
                <attribute name="attrs">{'invisible': ['|', '|', ('display_assign_serial', '=', False), ('has_tracking', 'in', ['none', 'lot']), ('routing_id', '!=', False)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='next_serial_count']" position="attributes">
                <attribute name="attrs">{'invisible': ['|', '|', ('display_assign_serial', '=', False), ('has_tracking', 'in', ['none', 'lot']), ('routing_id', '!=', False)]}</attribute>
            </xpath>
            <xpath expr="//button[@name='action_assign_serial_show_details']" position="attributes">
                <attribute name="attrs">{'invisible': ['|', '|', ('display_assign_serial', '=', False), ('has_tracking', 'in', ['none', 'lot']), ('routing_id', '!=', False)]}</attribute>
            </xpath>
        </field>
    </record>
</odoo>
